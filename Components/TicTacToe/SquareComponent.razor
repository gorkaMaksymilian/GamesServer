@using Models.TicTacToe


<MudItem @onclick="SquareSelected">
    @if (BaseSquare != null) 
    {
        if(BaseSquare.Mark.HasValue)
        {
            <MudPaper Class="mud-theme-primary" Width="140px" Height="140px" style="display: flex; justify-content: center; align-items: center; font-size:100px">@BaseSquare.Mark.Value</MudPaper>
        }
        else
        {
            <MudPaper Class="mud-theme-primary" Width="140px" Height="140px"/>
        }    
    }
</MudItem>


@code {
    [Parameter]
    public Square? BaseSquare { get; set; }
    
    [Parameter]
    public Action<MouseEventArgs>? ClickParameter { get; set; }
    
    public void SquareSelected (MouseEventArgs mouseEventArgs)
    {
        ClickParameter?.Invoke(mouseEventArgs);
    }
}